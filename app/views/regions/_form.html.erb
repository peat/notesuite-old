<%= form_for(@region) do |f| %>
  <fieldset>
    <legend><%= create_or_update(@region) %> Region</legend>

    <% if @region.errors.any? %>
    <ul>
    <% @region.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    <% end %>

    <ul>
      <%= f.text_field :name, :required => true %>
      <%= f.text_field :native_name %>
      <%= f.submit create_or_update(@region) %>
    </ul>
  </fieldset>
<% end %>