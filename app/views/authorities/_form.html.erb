<% form_for(@authority) do |f| %>
  <fieldset>
    <legend><%= create_or_update(@authority) %> Issuing Authority</legend>

    <% if @authority.errors.any? %>
    <ul>
    <% @authority.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
    <% end %>

    <ul>
      <%= f.text_field :name, :required => true %>
      <%= f.select :country_id, Country.for_select, :required => true %>
      <%= f.submit create_or_update(@authority) %>
    </ul>
  </fieldset>
<% end %>